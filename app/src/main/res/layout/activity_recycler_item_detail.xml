<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerItemDetailActivity"
    android:background="@color/mybackground"
    android:orientation="vertical">



    <ImageView
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:id="@+id/imgFImageindetail"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/searchicon"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFNameindetail"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="gone with the wind"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtFGenreindetail"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="Action"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/txtFYearindetail"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="2021"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/txtFDirectorindetail"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="2021"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/txtFCountryindetail"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="2021"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                />

        </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="22sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:background="@color/mylightgray"
        />


</LinearLayout>